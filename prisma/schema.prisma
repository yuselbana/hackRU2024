generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL")
}



model Grocery{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  category String
  price Int 
 
}

model Location {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  address String
  longitude Float
  latitude Float
 
}